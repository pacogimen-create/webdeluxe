---
// Header component
---

<header class="header">
    <div class="container header__container">
        <a href="#" class="logo">WCN<span class="dot">.</span></a>
        <nav class="nav">
            <ul class="nav__list">
                <li><a href="#about" class="nav__link">Nosotros</a></li>
                <li><a href="#services" class="nav__link">Programas</a></li>
                <li><a href="#membership" class="nav__link">Membresía</a></li>
            </ul>
            <a href="#join" class="btn btn--primary">Únete Ahora</a>
        </nav>
        <button class="menu-toggle" aria-label="Abrir menú">
            <span class="bar"></span>
            <span class="bar"></span>
        </button>
    </div>
</header>

<style>
/* Header */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    height: var(--header-height);
    display: flex;
    align-items: center;
    transition: background-color 0.3s ease, padding 0.3s ease, color 0.3s ease;
    color: var(--color-white);
}

.header.scrolled {
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
    color: var(--color-secondary);
}

.header__container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: inherit;
}

.logo .dot {
    color: var(--color-primary);
}

.nav {
    display: none;
}

.menu-toggle {
    display: block;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
}

.bar {
    display: block;
    width: 25px;
    height: 2px;
    background-color: currentColor;
    margin: 6px 0;
    transition: 0.3s;
}

@media (min-width: 992px) {
    .nav {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
    }

    .nav__list {
        display: flex;
        gap: var(--spacing-md);
    }

    .nav__link {
        font-weight: 500;
        font-size: var(--text-sm);
        position: relative;
    }

    .nav__link::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background-color: var(--color-primary);
        transition: width 0.3s ease;
    }

    .nav__link:hover::after {
        width: 100%;
    }

    .menu-toggle {
        display: none;
    }
}

/* Mobile Nav Overlay */
@media (max-width: 991px) {
    .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-color: var(--color-secondary);
        z-index: 99;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        transform: translateX(100%);
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .nav.nav--open {
        transform: translateX(0);
    }

    .nav__list {
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .nav__link {
        font-size: 1.5rem;
        color: var(--color-white);
    }

    .menu-toggle {
        z-index: 100;
        position: relative;
    }

    .menu-toggle.active .bar:nth-child(1) {
        transform: rotate(45deg) translate(5px, 6px);
    }

    .menu-toggle.active .bar:nth-child(2) {
        opacity: 0;
    }
}
</style>
